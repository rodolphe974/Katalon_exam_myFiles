<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>fr.sogeti.test-academy</groupId>
  <artifactId>mvn-katalon</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.6.0</version>
        <executions>
          <execution>
            <goals>
              <goal>exec</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <executable>katalon</executable>
          <workingDirectory>${katalon.home}</workingDirectory>
          <arguments>
            <argument>-runMode=console</argument>
            <argument>-projectPath=${katalon.project.file}</argument>
            <argument>-browserType=Chrome</argument>
            <argument>-executionProfile=default</argument>
            <argument>-retry=0</argument>
            <argument>-testSuitePath=Test Suites/Add addresses</argument>
          </arguments>
        </configuration>
      </plugin>
    </plugins>
  </build>
  
</project>
